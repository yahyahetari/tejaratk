# ===========================================
# ملف متغيرات البيئة - تجارتك
# ===========================================
# انسخ هذا الملف إلى .env.local وقم بتعبئة القيم

# ===========================================
# قاعدة البيانات (Database)
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/tejaratk?schema=public"

# ===========================================
# المصادقة (Authentication)
# ===========================================
JWT_SECRET="your-super-secret-key-for-jwt-min-32-characters-long"
JWT_EXPIRY="7d"
SESSION_EXPIRY_HOURS="168"
VERIFICATION_CODE_EXPIRES_IN="10"

# البريد الإلكتروني للمسؤول
ADMIN_EMAIL="admin@example.com"

# ===========================================
# البريد الإلكتروني (Email - Nodemailer)
# ===========================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="'تجارتك' <noreply@tejaratk.com>"

# ===========================================
# رفع الملفات (ImageKit)
# ===========================================
IMAGEKIT_PRIVATE_KEY="your-imagekit-private-key"
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY="your-imagekit-public-key"
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your-id"

# ===========================================
# بوابة الدفع (Paddle)
# ===========================================
PADDLE_VENDOR_ID="your-paddle-vendor-id"
PADDLE_API_KEY="your-paddle-api-key"
PADDLE_WEBHOOK_SECRET="your-paddle-webhook-secret"
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN="your-paddle-client-token"
NEXT_PUBLIC_PADDLE_ENVIRONMENT="sandbox"

# معرفات أسعار الخطط (Paddle Price IDs)
PADDLE_BASIC_MONTHLY_PRICE_ID="pri_xxxxx"
PADDLE_BASIC_YEARLY_PRICE_ID="pri_xxxxx"
PADDLE_PREMIUM_MONTHLY_PRICE_ID="pri_xxxxx"
PADDLE_PREMIUM_YEARLY_PRICE_ID="pri_xxxxx"
PADDLE_ENTERPRISE_MONTHLY_PRICE_ID="pri_xxxxx"
PADDLE_ENTERPRISE_YEARLY_PRICE_ID="pri_xxxxx"

